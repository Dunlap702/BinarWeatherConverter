<Application x:Class="BinarWeatherConverter.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BinarWeatherConverter" 
             xmlns:converter="clr-namespace:BinarWeatherConverter.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <converter:LocationConverter x:Key="LocationConverter"/>

        <SolidColorBrush x:Key="GeneralText" Color="DarkGray"/>

        <!--<SolidColorBrush x:Key="GeneralBackground" Color="#2c5364"/>-->

        <LinearGradientBrush x:Key="GeneralBackground" EndPoint="0,0" StartPoint="0,1">
            <GradientStop Color="#203a43" Offset="0.95"/>
            <GradientStop Color="#2c5364" Offset="0.45"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="MenuBackground" EndPoint="0,0" StartPoint="0,1">
            <GradientStop Color="#203a43" Offset="0.5"/>
            <GradientStop Color="#2c5364" Offset="0.05"/>
        </LinearGradientBrush>

    </Application.Resources>
</Application>
